{
  "name": "label-u",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/frontend"
  ],
  "version": "1.7.0",
  "scripts": {
    "prepare": "husky install",
    "start": "lerna run build:type && lerna run --parallel --stream start",
    "dev": "npm run start",
    "build": "lerna run --scope=@label-u/utils --scope=@label-u/annotation --scope=@label-u/components build",
    "build:type": "lerna run build:type",
    "lint": "lerna run --parallel --stream lint",
    "lint:script": "eslint ./packages --ext .js,.jsx,.ts,.tsx --fix",
    "lint:style": "stylelint --fix '**/*.less'",
    "clean": "lerna clean && rimraf ./packages/**/package-lock.json",
    "commit": "cz",
    "release": "multi-semantic-release --ignore-private-packages"
  },
  "author": "wuhui",
  "contributors": [
    "lijingchi",
    "tanjunbao",
    "chenlu",
    "lihuaqi",
    "luoluo"
  ],
  "keywords": [
    "annotation",
    "canvas",
    "react"
  ],
  "homepage": "https://github.com/opendatalab/labelU-Kit.git",
  "bugs": {
    "url": "https://github.com/opendatalab/labelU-Kit.git",
    "email": "751569801@qq.com"
  },
  "main": "index.js",
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@shlab/fabric": "^1.2.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "multi-semantic-release": "^3.0.1",
    "semantic-release": "^19.0.3",
    "stylelint": "^14.16.1",
    "stylelint-prettier": "^2.0.0",
    "tsc-files": "^1.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ],
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.less": [
      "stylelint --fix"
    ],
    "packages/**/src/**/*.ts": "tsc-files --noEmit",
    "packages/**/src/**/*.{js,jsx,ts,tsx,json,css,scss,less,md}": [
      "prettier --check --write"
    ],
    "packages/**/src/**/*.{js,ts,jsx,tsx}": "eslint --ext .js,.jsx,.ts,.tsx"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "gauge": "^2.7.4",
    "react-ace": "^10.1.0"
  }
}
